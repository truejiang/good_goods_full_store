/**index.wxss**/
@import '../../style/style.wxss';

.index-wrapper {
  width: 100%;
  height: 100%;
  border-top: 1px solid #eee;
}

.index-wrapper .searchbox {
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  padding: 20rpx;
  position: relative;
  padding-bottom: 0;
}

.index-wrapper .searchbox .searchicon {
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

.index-wrapper .searchbox .searchinput {
  height: 64rpx;
  flex: 1;
  line-height: 64rpx;
  font-size: 30rpx;
  border: 1px solid #ddd;
  border-radius: 36rpx;
  padding: 0 24rpx;
  padding-left: 74rpx;
  background-color: #eee;
}

.index-wrapper .searchbox .menu-btn {
  flex: 0 0 64rpx;
  height: 64rpx;
  margin-left: 20rpx;
  border-radius: 50%;
  border: 1px solid #f3c267;
  text-align: center;
}

.index-wrapper .searchbox .menu-btn image {
  width: 80%;
  height: 80%;
  vertical-align: -30rpx;
}

.index-wrapper .swiper-wrapper {
  width: 100%;
  height: 350rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.index-wrapper .swiper-wrapper .item {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

/* 分类导航栏 */

.index-wrapper .nav {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  margin: 20rpx 0;
}

.index-wrapper .nav .nav-item {
  width: 25%;
  text-align: center;
}

.index-wrapper .nav .nav-item image {
  width: 84rpx;
  height: 84rpx;
}

.index-wrapper .nav .nav-item .item-tit {
  font-size: 24rpx;
  display: block;
  color: #666;
}

/* 热卖 代售 时间线 */

.index-wrapper .goods-time-line {
  white-space: nowrap;
  padding: 20rpx;
  border: 1px solid #eee;
  background-color: #fff;
}

.index-wrapper .goods-time-line .item {
  display: inline-block;
  padding: 0 40rpx;
  text-align: center;
}

.index-wrapper .goods-time-line .item.overtime {
  color: #333;
}

.index-wrapper .goods-time-line .item.actived {
  color: #f3c267;
}

.index-wrapper .goods-time-line .item .time {
  font-size: 36rpx;
  font-weight: 500;
  display: block;
}

.index-wrapper .goods-time-line .item .tit {
  font-size: 20rpx;
}

/* 商品列表 */

.index-wrapper .goods-list-wrapper {
  width: 100%;
  box-sizing: border-box;
}

.index-wrapper .goods-list-wrapper .goods-list-item {
  background-color: #fff;
  margin: 20rpx 0;
}
.index-wrapper .goods-list-wrapper .goods-list-item .goods-info {
  border-bottom: 1px solid #eee;
  padding: 20rpx;  
  display: flex;
}
.index-wrapper .goods-list-wrapper .goods-list-item .goodsimg {
  flex: 0 0 280rpx;
  height: 280rpx;
  background-size: 280rpx 280rpx;
  background-repeat: no-repeat;
  background-position: center center;
}

.index-wrapper .goods-list-wrapper .goods-list-item .info-panel {
  flex: 1;
  box-sizing: border-box;
  padding-left: 14rpx;
}

.index-wrapper .goods-list-wrapper .goods-list-item .info-panel .title {
  font-size: 26rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.7;
}
.info-wrapper {
  display: flex;
  flex-direction: column;
  min-height: 300rpx;
}
.index-wrapper .goods-list-wrapper .goods-list-item .info-panel .title .expresstype {
  border: 1px solid #999;
  border-radius: 6rpx;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 0 10rpx;
  font-weight: normal;
  color: #666;
}
.index-wrapper .goods-list-wrapper .goods-list-item .info-panel .des {
  box-sizing: border-box;
  padding: 20rpx 0;
  flex: 1;
}
.index-wrapper .goods-list-wrapper .goods-list-item .info-panel .price-bar {
  height: 40rpx;
  color: red;
  font-size: 26rpx;
}
.index-wrapper .goods-list-wrapper .goods-list-item .info-panel .price-bar .line{
  padding: 0 20rpx;
}
.index-wrapper .goods-list-wrapper .goods-list-item .info-panel .price-bar .icon{
  font-size: 22rpx;
}
.index-wrapper .goods-list-wrapper .goods-list-item .goods-tool-bar {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx;
}
.index-wrapper .goods-list-wrapper .goods-list-item .brand {
  border: 1px solid #f3c267;
  border-radius: 16rpx;
  font-size: 22rpx;
  padding: 0 14rpx;
  color: #f3c267;
}
.index-wrapper .goods-list-wrapper .goods-list-item .liek-share .icon{
  width: 32rpx;
  height: 32rpx;
}
.index-wrapper .goods-list-wrapper .goods-list-item .liek-share .icon:first-child{
  margin-right: 40rpx;
}