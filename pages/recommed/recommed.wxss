/* pages/recommed/recommed.wxss */

.recommed-wrapper {
  width: 100%;
  height: 100%;
}

/* 顶部栏 */

.header {
  position: relative;
}

.header .top-setting-bar {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0 100rpx 20rpx;
  background-color: #666;
  color: #fff;
  box-sizing: border-box;
  position: relative;
}

.header .raduis-bar {
  width: 100%;
  background-color: #666;
  height: 50rpx;
  border-radius: 50%;
  transform: translateY(-50%);
}

.header .top-setting-bar image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-right: 14rpx;
}

.header .top-setting-bar .edit {
  padding: 10rpx;
}

.header .top-setting-bar .share {
  color: #f3c267;
  background-color: #333;
  padding: 10rpx;
}

.header .user-info {
  position: absolute;
  width: calc(100% - 100rpx);
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  left: 50rpx;
  bottom: -30rpx;
  box-shadow: 1px 1px 1px #333;
  border-radius: 6rpx;
}


.header .user-info .user-photo {
  width: 72rpx;
  height: 72rpx;
  border: 2px solid #fff;
  top: -72rpx;
  left: calc(50% - 36rpx);
  border-radius: 50%;
  background-position: center center;
  background-size: 72rpx 72rpx;
  background-repeat: no-repeat;
  z-index: 99;
  position: relative;
  overflow: hidden;
  text-align: center;
}
.header .user-info .user-photo .photo-edit {
  position: absolute;
  bottom: 0;
  left: 8rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: rgba(102, 102, 102, 0.3);
  padding: 10rpx;
}
.name {
  text-align: center;
  vertical-align: top;
}
.name image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-left: 14rpx;
}