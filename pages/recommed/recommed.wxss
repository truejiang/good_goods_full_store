/* pages/recommed/recommed.wxss */
@import '../../style/style.wxss';

.recommed-wrapper {
  width: 100%;
  height: 100%;
}

/* 顶部栏 */

.header {
  position: relative;
}

.header .top-setting-bar {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0 100rpx 20rpx;
  background-color: #666;
  color: #fff;
  box-sizing: border-box;
  position: relative;
}

.header .raduis-bar {
  width: 100%;
  background-color: #666;
  height: 50rpx;
  border-radius: 50%;
  transform: translateY(-50%);
}

.header .top-setting-bar image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-right: 14rpx;
}

.header .top-setting-bar .edit {
  padding: 10rpx;
}

.header .top-setting-bar .share {
  color: #f3c267;
  background-color: #333;
  padding: 10rpx;
}

.header .user-info {
  position: absolute;
  width: calc(100% - 40rpx);
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  left: 20rpx;
  bottom: -156rpx;
  box-shadow: 0px 0px 1px rgba(102, 102, 102, 0.3);
  border-radius: 6rpx;
}

.header .user-info .user-photo {
  width: 72rpx;
  height: 72rpx;
  border: 2px solid #fff;
  top: -72rpx;
  left: calc(50% - 36rpx);
  border-radius: 50%;
  background-position: center center;
  background-size: 72rpx 72rpx;
  background-repeat: no-repeat;
  z-index: 99;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.header .user-info .user-photo .photo-edit {
  position: absolute;
  bottom: 0;
  left: 8rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: rgba(102, 102, 102, 0.3);
  padding: 10rpx;
}

.info-panel {
  margin-top: -50rpx;
  text-align: center;
}

.name {
  vertical-align: top;
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
}

.name image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-left: 14rpx;
}

.dynamic {
  display: inline-block;
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  background-color: #f2f2f2;
  margin: 10rpx 0;
  font-size: 24rpx;
}

.welcome {
  margin: 10rpx 0;
}

.record-bar {
  padding: 0 20rpx;
  padding-top: 180rpx;
  box-sizing: border-box;
}

.record-bar .top .record-pp {
  color: #333;
  margin-right: 10rpx;
  font-weight: 700;
}

.record-bar .bottom {
  padding: 10rpx 0;
}

.record-bar .bottom image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 10rpx;
}

.day-record-wrapper {
  width: 100%;
}

.day-record-wrapper .title {
  box-sizing: border-box;
  padding: 30rpx 20rpx 20rpx 20rpx;
  background-color: #e6e6e6;
  font-weight: 700;
  color: #333;
}

.day-record-wrapper .title image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  vertical-align: top;
}

.day-record-wrapper .record-list {
  padding: 20rpx 0 0 0;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.day-record-wrapper .record-list .user-info-wrapper {
  padding: 0 20rpx;
  box-sizing: border-box;
}

.day-record-wrapper .record-list .user-info-wrapper .user-photo {
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 64rpx 64rpx;
}

.day-record-wrapper .record-list .user-info-wrapper .icon {
  margin: 0 10rpx;
  width: 36rpx;
  height: 36rpx;
  vertical-align: text-bottom;
}

.day-record-wrapper .record-list .recommend-word {
  box-sizing: border-box;
  background: rgba(243, 194, 103, 0.3);
  padding: 20rpx;
  color: #333;
  font-size: 26rpx;
  margin: auto;
  margin-top: 20rpx;
  border-radius: 10rpx;
  position: relative;
  width: calc(100% - 40rpx);
}

.day-record-wrapper .record-list .recommend-word::before {
  content: "";
  position: absolute;
  display: inline-block;
  top: -20rpx;
  left: 20rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 20rpx solid rgba(243, 194, 103, 0.3);
}

.day-record-wrapper .record-list .recommed-goods {
  padding: 20rpx 36rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  margin-top: 20rpx;
  display: flex;
}

.day-record-wrapper .record-list .recommed-goods .img {
  width: 160rpx;
  height: 140rpx;
  flex: 0 0 160rpx;
  margin-right: 10rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 160rpx 140rpx;
}
.day-record-wrapper .record-list .recommed-goods .goods-info {
  display: flex;
  height: 140rpx;
  flex-direction: column;
  justify-content: space-between;
}
.day-record-wrapper .record-list .recommed-goods .goods-info .price {
  color: red;
  font-size: 30rpx
}
.day-record-wrapper .record-list .recommed-goods .goods-info .price .icon {
  font-size: 22rpx;
}
.like-bar {
  background-color: #fff;
  display: flex;
  height: 64rpx;
}
.like-bar .like-btn {
  flex: 0 0 120rpx;
  border-left: 1px solid #333;
}
.like-bar .like-list {
  flex: 1;
}