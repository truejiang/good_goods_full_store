/* pages/searchpage/searchpage.wxss */
/**search.wxss**/
.search-wrapper {
  width: 100%;
  height: 100%;
  border-top: 1px solid #eee;
}
.search-wrapper .searchbox {
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  padding: 20rpx;
  position: relative;
}
.search-wrapper .searchbox .searchicon {
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}
.search-wrapper .searchbox .searchinput {
  height: 64rpx;
  flex: 1;
  line-height: 64rpx;
  font-size: 30rpx;
  border: 1px solid #ddd;
  border-radius: 36rpx;
  padding: 0 24rpx;
  padding-left: 74rpx;
  background-color: #eee;
}
.search-wrapper .searchbox .menu-btn {
  flex: 0 0 84rpx;
  height:64rpx;
  line-height: 64rpx;
  margin-left: 20rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #666;
}
.search-wrapper .searchbox .menu-btn .search{
  color: #f3c267;
}
.search-wrapper .searchbox .menu-btn image {
  width: 80%;
  height: 80%;
  vertical-align: middle;
}